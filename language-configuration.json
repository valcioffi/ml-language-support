{    
    "comments": {
        "blockComment": [ "(*", "*)" ]
    },
    "brackets": [
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["(*", "*)"]
    ],
    "surroundingPairs": [
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""]
    ],
    "folding": {
        "let": {
            "start": "^\\s*let\\b",
            "end": "^\\s*end\\b"
        },
        "comments": {
            "start": "^\\s*\\(\\*\\b",
            "end": "^\\s*\\*\\)\\b"
        }
    }    
}